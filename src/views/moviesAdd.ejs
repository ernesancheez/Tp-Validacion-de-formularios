<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article >
            <form action="/movies/create" method="POST" id="form">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="title"></p>
                <p id="error-title"></p>
                <p id="info-title"></p>
                <br>

                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="rating"> </p>
                <p id="error-rating"></p>
                <p id="info-rating"></p>
                <br>

                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="awards"></p>
                <p id="error-awards"></p>
                <p id="info-awards"></p>
                <br>

                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="release_date"></p>
                <p id="error-release_date"></p>
                <p id="info-release_date"></p>
                <br>

                <label for="length">Duración </label>
                <p><input type="number" name="length" id="length"></p>
                <p id="error-length"></p>
                <p id="info-length"></p>
                <br>

                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="genre">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
                <p id="error-genre"></p>
                <p id="info-genre"></p>
                <br>
                <br>
                <p id="error-form"></p>
                <p> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        </article>
    </section>

    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>